<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40464A"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/groupN1"
        android:layout_width="85dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/gMedOr2"
        app:layout_constraintEnd_toStartOf="@+id/gMedVer2"
        app:layout_constraintStart_toStartOf="@+id/dDer"
        app:layout_constraintTop_toBottomOf="@+id/gMedVer2">

        <Button
            android:id="@+id/b7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B096DF"
            android:onClick="numero"
            android:text="7"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/b4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B096DF"
            android:onClick="numero"
            android:text="4"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B096DF"
            android:onClick="numero"
            android:text="1"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/b0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B096DF"
            android:onClick="numero"
            android:text="0"
            tools:ignore="OnClick" />
    </RadioGroup>

    <TextView
        android:id="@+id/mostrar"
        android:layout_width="291dp"
        android:layout_height="75dp"
        android:layout_marginBottom="571dp"
        android:background="#B0FFFFFF"
        android:hint="0"
        android:textAlignment="textEnd"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dIzq"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintStart_toStartOf="@+id/dDer"
        app:layout_constraintTop_toBottomOf="@+id/gMedVer1"
        app:layout_constraintVertical_bias="0.366" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dDer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/gMedVer2"
        app:layout_constraintGuide_begin="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dIzq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/dIzq2"
        app:layout_constraintGuide_begin="395dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dIzq2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="189dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/operadores"
        app:layout_constraintGuide_begin="303dp"
        app:layout_constraintTop_toBottomOf="@+id/dIzq" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gMedVer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="189dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/groupN1"
        app:layout_constraintGuide_begin="116dp"
        app:layout_constraintTop_toBottomOf="@+id/dDer" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="675dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="59dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fMedOr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="256dp" />

    <RadioGroup
        android:id="@+id/groupN2"
        android:layout_width="86dp"
        android:layout_height="195dp"
        app:layout_constraintBottom_toTopOf="@+id/gMedOr2"
        app:layout_constraintEnd_toStartOf="@+id/gMedVer1"
        app:layout_constraintStart_toEndOf="@+id/groupN1"
        app:layout_constraintTop_toTopOf="@+id/fMedOr1">

        <Button
            android:id="@+id/b8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B096DF"
            android:onClick="numero"
            android:text="8"
            tools:ignore="OnClick,UsingOnClickInXml" />

        <Button
            android:id="@+id/b5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B096DF"
            android:onClick="numero"
            android:text="5"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B096DF"
            android:onClick="numero"
            android:text="2"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/punto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#9474CD"
            android:onClick="operar"
            android:text="."
            tools:ignore="OnClick" />

    </RadioGroup>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gMedVer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="74dp"
        android:onClick="operar"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/mostrar"
        app:layout_constraintGuide_begin="205dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="OnClick" />

    <RadioGroup
        android:id="@+id/groupN3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/gMedOr2"
        app:layout_constraintEnd_toStartOf="@+id/dIzq2"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="@+id/gMedVer1"
        app:layout_constraintTop_toTopOf="@+id/fMedOr1"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible">

        <Button
            android:id="@+id/b9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#B096DF"
            android:text="9"
            android:onClick="numero"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/b6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#B096DF"
            android:onClick="numero"
            android:text="6"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#B096DF"
            android:onClick="numero"
            android:text="3"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/bIgual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#9474CD"
            android:minHeight="48dp"
            android:onClick="igual"
            android:text="="
            tools:ignore="OnClick,TouchTargetSizeCheck" />
    </RadioGroup>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gMedOr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="446dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gMedOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="603dp" />

    <RadioGroup
        android:id="@+id/operadores"
        android:layout_width="92dp"
        android:layout_height="190dp"
        app:layout_constraintBottom_toTopOf="@+id/gMedOr2"
        app:layout_constraintEnd_toStartOf="@+id/dIzq"
        app:layout_constraintStart_toStartOf="@+id/dIzq2"
        app:layout_constraintTop_toBottomOf="@+id/dIzq2">

        <Button
            android:id="@+id/resta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#9474CD"
            android:text="-"
            android:onClick="operar"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/suma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#9474CD"
            android:onClick="operar"
            android:text="+"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/multi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#9474CD"
            android:onClick="operar"
            android:text="*"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/divi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#9474CD"
            android:minHeight="48dp"
            android:onClick="operar"
            android:text="/"
            tools:ignore="OnClick,TouchTargetSizeCheck" />

    </RadioGroup>

    <Button
        android:id="@+id/limpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F3EFEF"
        android:onClick="limpiar"
        android:text="LIMPIAR"
        app:layout_constraintEnd_toStartOf="@+id/dIzq"
        app:layout_constraintStart_toStartOf="@+id/dDer"
        app:layout_constraintTop_toTopOf="@+id/gMedOr2"
        tools:ignore="OnClick" />

</androidx.constraintlayout.widget.ConstraintLayout>